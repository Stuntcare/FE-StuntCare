<%- include('layouts/heading') %>

<%- include('layouts/sidebar') %>

    <main id="main" class="main">
        <div class="pagetitle">
            <h1><%= title %></h1>
            <nav>
                <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active"><%= title %></li>
                </ol>
            </nav>
        </div>

        <%- include('layouts/cardArtikel') %>
        
        <div id="pagination">
            <% if (pages > 1) { %>
                <% if (page > 1) { %>
                    <a class="pagination-button" href="/api/artikel?page=1&limit=<%= limit %>">First</a>
                <% } %>
                <% if (page > 1) { %>
                    <a class="pagination-button" href="/api/artikel?page=<%= page - 1 %>&limit=<%= limit %>">Previous</a>
                <% } %>
                <% for (let i = 1; i <= pages; i++) { %>
                    <a class="pagination-button <% if (page === i) { %>active<% } %>" href="/api/artikel?page=<%= i %>&limit=<%= limit %>"><%= i %></a>
                <% } %>
                <% if (page < pages) { %>
                    <a class="pagination-button" href="/api/artikel?page=<%= page + 1 %>&limit=<%= limit %>">Next</a>
                <% } %>
                <% if (page < pages) { %>
                    <a class="pagination-button" href="/api/artikel?page=<%= pages %>&limit=<%= limit %>">Last</a>
                <% } %>
            <% } %>
        </div>
    </main>
    <script src="/js/script.js"></script>
    <script type="module" src="artikel-handler.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>
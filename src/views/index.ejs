<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/images/favicon.ico" sizes="48x48" />
  <title>Login</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh;">
      <div class="col-md-6 col-lg-4 mx-auto">
        <section class="card p-4 shadow-sm">
          <h2 class="text-center mb-4">Login</h2>
          <p class="text-center">Masukkan Email dan Password</p>
          <form id="loginForm">
            <div class="form-group">
              <label for="email">Email:</label>
              <div class="input-group">
                <input type="email" class="form-control form-control-lg" id="email" name="email" required />
                <div class="input-group-append">
                  <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="password">Password:</label>
              <div class="input-group">
                <input type="password" class="form-control form-control-lg" id="password" name="password" autocomplete="off" required />
                <div class="input-group-append">
                  <span class="input-group-text" id="togglePassword">
                    <i class="bi bi-eye-slash" id="eyeIcon"></i>
                  </span>
                </div>
              </div>
            </div>
            <button type="submit" class="btn button-login btn-block">Login</button>
          </form>
        </section>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 
  <script src="login.js"></script>
  <script>
    document.getElementById('togglePassword').addEventListener('click', function () {
      const password = document.getElementById('password');
      const eyeIcon = document.getElementById('eyeIcon');
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      eyeIcon.classList.toggle('bi-eye');
      eyeIcon.classList.toggle('bi-eye-slash');
    });
  </script>
</body>
</html>
